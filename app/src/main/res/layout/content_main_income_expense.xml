<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efecec"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainIncomeExpenseActivity"
    tools:showIn="@layout/activity_main_income_expense">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/currency_note"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Income-Expenses\nRecord"
            android:maxLines="2"
            android:textSize="24sp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_view_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:drawableStart="@drawable/ic_view_white"
            android:drawablePadding="10dp"
            android:text="View Record"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_pink_state"
            android:textColor="@drawable/text_general_state"/>
        <Button
            android:id="@+id/btn_add_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:drawableStart="@drawable/ic_edit_white"
            android:drawablePadding="10dp"
            android:text="Add Record"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_pink_state"
            android:textColor="@drawable/text_general_state"/>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>