<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ksn.kraiponn.income_expensesrecord">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/inc_exp_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/inc_exp_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainIncomeExpenseActivity"
            android:label="@string/title_activity_main_income_expense"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.ScanningCodeActivity" />
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activity.AddIncomeExpensesActivity"
            android:label="@string/title_activity_add_income_expenses"
            />
        <activity
            android:name=".activity.DataViewIncomeExpenseActivity"
            android:label="@string/title_activity_data_view_income_expense"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>